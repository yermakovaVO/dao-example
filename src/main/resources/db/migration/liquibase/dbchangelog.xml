<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
  <changeSet author="v.ermakova" id="create employee table">
    <createTable tableName="employee">
      <column autoIncrement="true" name="id" type="INTEGER">
        <constraints nullable="false" primaryKey="true" primaryKeyName="actor_pkey"/>
      </column>
      <column name="name" type="VARCHAR(150)"/>
      <column name="age" type="INTEGER"/>
    </createTable>
  </changeSet>


  <changeSet author="v.ermakova" id="add director">
    <sql>
      insert into employee (name, age) values ('Иванов Иван Иваныч', 40);
    </sql>

  </changeSet>
</databaseChangeLog>
